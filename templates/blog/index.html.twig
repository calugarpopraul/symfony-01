{% extends 'base.html.twig' %}

{% block title %} Blog index {% endblock %}

{% block body %}

    <small class="d-block text-right mt-3">
        <a href="#">All updates</a>
    </small>

    {% for id,post in posts %}
        <p><a href="{{ path('blog_show',{'id':id}) }}">{{ id }}</a></p>
        <h3>{{ post.title | upper }}</h3>
        <p>{{ post.text }}</p>
    {% endfor %}

{% endblock %}